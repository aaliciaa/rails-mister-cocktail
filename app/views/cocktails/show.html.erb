
<div>
<h2><%= @cocktail.name %></h2>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %>
  <%= dose.ingredient.name %></p>
  <% end %>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
</div>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

<%= link_to "View all Cocktails", cocktails_path %>
